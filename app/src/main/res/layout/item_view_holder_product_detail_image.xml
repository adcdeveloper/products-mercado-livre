<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItemProductDetailContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_8dp"
    app:cardElevation="@dimen/card_elevation_2dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/imageItemProductDetailImage"
        android:layout_width="@dimen/size_image_item_product_detail_56dp"
        android:layout_height="@dimen/size_image_item_product_detail_56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_image_detail_placeholder" />

</androidx.cardview.widget.CardView>